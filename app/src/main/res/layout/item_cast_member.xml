<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="80dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="12dp"
    android:orientation="vertical"
    android:gravity="center">

    <!-- Cast Profile Image -->
    <androidx.cardview.widget.CardView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="4dp">

        <ImageView
            android:id="@+id/castProfileImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:contentDescription="Cast Member"
            tools:src="@tools:sample/avatars" />

    </androidx.cardview.widget.CardView>

    <!-- Cast Name -->
    <TextView
        android:id="@+id/castNameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Actor Name"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:textStyle="bold"
        android:gravity="center"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginBottom="2dp"
        tools:text="Robert Downey Jr." />

    <!-- Character Name -->
    <TextView
        android:id="@+id/characterNameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Character"
        android:textColor="@color/netflix_light_gray"
        android:textSize="10sp"
        android:gravity="center"
        android:maxLines="1"
        android:ellipsize="end"
        tools:text="Tony Stark" />

</LinearLayout>